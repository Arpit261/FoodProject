<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context="activity.LoginActivity">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <ImageView
             android:id="@+id/imglogologin"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:src="@drawable/logofood"
             android:layout_marginTop="15dp"/>



          <EditText
              android:id="@+id/etmobilenumberlogin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/imglogologin"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:backgroundTint="#dd2c00"
              android:padding="10dp"
              android:hint="Mobile Number(10 digits)"
              android:inputType="number"
              android:maxLines="1"
              android:maxLength="10"/>


          <EditText
              android:id="@+id/etpasswordlogin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/etmobilenumberlogin"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:backgroundTint="#dd2c00"
              android:padding="10dp"
              android:hint="Password"
              android:inputType="textPassword"
              android:maxLines="1"
              android:maxLength="10"/>


         <Button
             android:id="@+id/btnlogin"
             android:layout_width="match_parent"
             android:layout_height="42dp"
             android:layout_below="@id/etpasswordlogin"
             android:text="login"
             android:layout_marginLeft="50dp"
             android:layout_marginRight="50dp"
             android:layout_marginTop="15dp"
             android:background="#d32f2f"
             android:textColor="#fafafa"
            android:textSize="15sp"/>


          <TextView
              android:id="@+id/txtforgetpasswordlogin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/btnlogin"
              android:layout_marginTop="10dp"
              android:layout_centerHorizontal="true"
              android:text="Forget Password?"
              android:textSize="18sp"
              android:textColor="#d32f2f"/>

          <TextView
              android:id="@+id/txtregisteraccountlogin"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="15dp"
                android:text="Don't have account? Resgister yourself"
              android:layout_centerHorizontal="true"
              android:textColor="#d32f2f"
                android:textSize="18sp"/>


      </RelativeLayout>
</LinearLayout>